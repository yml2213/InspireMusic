{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "InspireMusic",
    "version": "1.3.3",
    "identifier": "com.whstu.inspiremusic",
    "publisher": "WHSTU",
    "copyright": "Copyright Â© 2025 WHSTU",
    "license": "MIT",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "InspireMusic",
                "width": 1200,
                "height": 800,
                "minWidth": 400,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "decorations": false,
                "transparent": true,
                "hiddenTitle": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "nsis"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.png",
            "icons/icon.ico"
        ],
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": "",
            "nsis": {
                "languages": [
                    "SimpChinese"
                ],
                "displayLanguageSelector": false,
                "installerIcon": "icons/icon.ico",
                "startMenuFolder": "InspireMusic",
                "createDesktopShortcut": "always",
                "createStartMenuShortcut": true,
                "installerMode": "currentUser",
                "compression": "lzma",
                "license": "../LICENSE"
            }
        }
    }
}